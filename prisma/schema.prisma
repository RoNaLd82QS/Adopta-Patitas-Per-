generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * Usa SIEMPRE enums multi-línea
 */
enum Role {
  ADMIN
  USER
}

enum Species {
  DOG
  CAT
}

enum Sex {
  MALE
  FEMALE
}

/**
 * …tu schema continúa, p.ej.
 */
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Pet {
  id          String        @id @default(cuid())
  name        String
  species     Species
  sex         Sex
  ageMonths   Int
  weightKg    Float?
  description String?
  photoUrl    String?
  followUps   FollowUp[]
  createdAt   DateTime      @default(now())
  Adoption    Adoption[]
  Publication Publication[]

  @@index([createdAt])
}

model FollowUp {
  id          String          @id @default(cuid())
  petId       String
  pet         Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)
  adopterName String
  notes       String?
  photos      FollowUpPhoto[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  Adoption    Adoption?       @relation(fields: [adoptionId], references: [id])
  adoptionId  String?

  @@index([petId])
}

model FollowUpPhoto {
  id         String   @id @default(cuid())
  followUpId String
  followUp   FollowUp @relation(fields: [followUpId], references: [id], onDelete: Cascade)
  url        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([followUpId])
}

model DonationMethod {
  id         String   @id @default(cuid())
  bankName   String
  account    String
  cci        String?
  logoUrl    String?
  yapeQrUrl  String?
  plinQrUrl  String?
  yapeHolder String?
  plinHolder String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([createdAt])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  location    String?
  description String?
  bannerUrl   String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}

/**
 * si añadiste ImageSlot, mantenlo también aquí
 */

// Registro de adopciones (para vincular certificado y seguimiento)
model Adoption {
  id           String       @id @default(cuid())
  petId        String
  pet          Pet          @relation(fields: [petId], references: [id])
  adopterName  String
  adopterEmail String
  adopterPhone String?
  status       String       @default("PENDING") // PENDING | APPROVED | REJECTED | COMPLETED
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  certificate  Certificate?
  followUps    FollowUp[]
}

// Certificados emitidos para adopciones aprobadas
model Certificate {
  id         String   @id @default(cuid())
  adoptionId String   @unique
  adoption   Adoption @relation(fields: [adoptionId], references: [id])
  number     String   @unique
  pdfUrl     String
  issuedBy   String
  issuedAt   DateTime @default(now())
}

// Publicaciones de mascotas (para comprobación / moderación)
model Publication {
  id          String    @id @default(cuid())
  petId       String
  pet         Pet       @relation(fields: [petId], references: [id])
  title       String
  description String?
  status      String    @default("PENDING") // PENDING | APPROVED | REJECTED
  reviewedBy  String?
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Registro de reportes generados (para descargar informes)
model ReportLog {
  id        String   @id @default(cuid())
  type      String // ADOPTIONS | DONATIONS | PETS | PUBLICATIONS
  format    String // CSV | PDF
  fileUrl   String
  createdBy String
  createdAt DateTime @default(now())
}
