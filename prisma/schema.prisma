generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  adoptions Adoption[]
  profile   Profile?
}

model Pet {
  id          String     @id @default(cuid())
  name        String
  species     Species
  sex         Sex
  ageMonths   Int
  weightKg    Float?
  description String?
  photoUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  adoptions   Adoption[]
  followUps   FollowUp[]

  @@index([createdAt])
}

model FollowUp {
  id          String          @id @default(cuid())
  petId       String
  adopterName String
  notes       String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  adoptionId  String?
  adoption    Adoption?       @relation("AdoptionFollowUps", fields: [adoptionId], references: [id])
  pet         Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)
  photos      FollowUpPhoto[]

  @@index([petId])
}

model FollowUpPhoto {
  id         String   @id @default(cuid())
  followUpId String
  url        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  followUp   FollowUp @relation(fields: [followUpId], references: [id], onDelete: Cascade)

  @@index([followUpId])
}

model AdoptionCertificate {
  id                String   @id @default(cuid())
  adoptionId        String   @unique
  certificateNumber String   @unique
  bookImageUrl      String?
  signatureUrl      String?
  issuedAt          DateTime @default(now())

  adoption Adoption @relation("AdoptionCertificate", fields: [adoptionId], references: [id], onDelete: Cascade)

  @@index([certificateNumber])
  @@index([issuedAt])
}

model DonationMethod {
  id         String   @id @default(cuid())
  bankName   String
  account    String
  cci        String?
  logoUrl    String?
  yapeQrUrl  String?
  plinQrUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  plinHolder String?
  yapeHolder String?

  @@index([createdAt])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  location    String?
  description String?
  bannerUrl   String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}

model Adoption {
  id           String   @id @default(cuid())
  petId        String
  userId       String?
  adopterName  String
  adopterEmail String
  adopterPhone String?
  address      String?
  district     String?
  province     String?
  houseType    String?
  hasKids      Boolean?
  hasOtherPets Boolean?
  motivation   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relaciones
  user        User?                @relation(fields: [userId], references: [id])
  pet         Pet                  @relation(fields: [petId], references: [id], onDelete: Cascade)
  photos      AdoptionPhoto[]
  followUps   FollowUp[]           @relation("AdoptionFollowUps")
  certificate AdoptionCertificate? @relation("AdoptionCertificate") // <â€” NUEVO

  status AdoptionStatus @default(PENDING)

  @@unique([petId, adopterEmail])
  @@index([petId])
  @@index([adopterEmail])
  @@index([userId])
}

model AdoptionPhoto {
  id         String   @id @default(cuid())
  adoptionId String
  url        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  adoption   Adoption @relation(fields: [adoptionId], references: [id], onDelete: Cascade)

  @@index([adoptionId])
}

model Profile {
  id        String    @id @default(cuid())
  userId    String    @unique
  name      String?
  lastName  String?
  birthDate DateTime?
  address   String?
  district  String?
  province  String?
  dni       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  USER
}

enum Species {
  DOG
  CAT
}

enum Sex {
  MALE
  FEMALE
}

enum AdoptionStatus {
  PENDING
  APPROVED
  REJECTED
}
